<?xml version="1.0"?>
<translations>
	<translation>
		<name>Adjust tunnel Layers</name>
		<description>Adjust tunnel Layers</description>
		<match type="way" mode="or">
			<match mode="and">
				<tag k="highway" v=".*"/>
				<tag k="tunnel" v="yes"/>
			</match>
			<match mode="and">
				<tag k="railway" v=".*"/>
				<tag k="tunnel" v="yes"/>
			</match>
		</match>
		<output>
			<copy-all/>
			<tag k="layer" v="0"/>
		</output>
	</translation>
	<translation>
		<name>Shorten names of supermarket</name>
		<description>Shorten names of supermarket</description>
		<match type="any" mode="and">
			<tag k="shop" v="supermarket"/>
			<tag k="name" match_id="_name" v="(Edeka|EDEKA|Aldi|ALDI|Netto|REWE|PENNY|Kiwi|Rema 1000|Extra|Coop Mega)(.*)"/>
		</match>
		<output>
			<copy-all/>
			<tag k="name" from_match="_name" v="{0}"/>
		</output>
	</translation>
	<translation>
		<name>Shorten names of bakery/cafes</name>
		<description>Shorten names of bakery/cafes</description>
		<match type="any" mode="and">
			<match mode="or">
				<tag k="amenity" v="cafe"/>
				<tag k="shop" v="bakery"/>
			</match>
			<tag k="name" match_id="_name" v="(.{12})(.*)"/>
		</match>
		<output>
			<copy-all/>
			<tag k="name" from_match="_name" v="{1}"/>
		</output>
	</translation>
</translations>
